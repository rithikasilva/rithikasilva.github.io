---
interface Props {
  title?: string;
  htmlContent?: string;
  colSpan?: string;
  rowSpan?: string;
}

const { title, htmlContent, colSpan, rowSpan } = Astro.props;
---

<div
  class={`card h-max sm:h-auto group overflow-hidden transform-y-[-40%] bg-darkslate-500 shadow-lg rounded-lg p-6 border border-darkslate-100 hover:border-primary-50 align-start flex-none justify-start relative transform perspective-1200 w-full transition duration-75 ease-in-out col-span-1 ${
    colSpan || "md:col-span-2"
  } ${rowSpan || ""}`}
>
  {title && <h2 class="text-xl font-bold m-0 z-20">{title}</h2>}
  {htmlContent && <div class="m-0 font-light text-base" set:html={htmlContent}></div>}
  <slot />
</div>
