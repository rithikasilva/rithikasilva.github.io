---
import Card from "./Card/index.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
    name?: string;
    technologies?: string;
    image?: string;
    link?: string;
}

const {name, technologies, image, link} = Astro.props;
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-6">
  <a href={link ? link : "#"} class={link ? "" : "pointer-events-none cursor-default"}>
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between gap-1">
      <div class="flex flex-col h-full">
        <h3 class="font-bold text-2xl m-0 mb-2 group-hover:text-primary-100 transition-colors duration-200">
            {name}
        </h3>
        <p class="text-sm font-medium text-primary-200 mb-3 uppercase tracking-wide">
          {technologies}
        </p>
        <p class="font-light text-base leading-relaxed text-gray-300 mr-2">
          <slot />
        </p>
      </div>
    </div>
    <div class="ml-auto self-center flex-shrink-0">
      {image ? (
        <img src={image} 
        class="rounded-lg w-20 h-20 aspect-square outline-none bg-darkslate-200 object-cover" 
        alt={`${name} preview`} />
      ) : (
        <div class="rounded-lg w-20 h-20 aspect-square bg-darkslate-300 flex items-center justify-center">
          <Icon name="ri:code-box-line" class="h-8 w-8 text-gray-400" />
        </div>
      )}
    </div>
  </div>
  </a>
</Card>
