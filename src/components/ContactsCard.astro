---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";

interface Props {
  colSpan?: string;
  rowSpan?: string;
}

const { colSpan, rowSpan } = Astro.props;
---

<Card colSpan={colSpan || "md:col-span-1"} rowSpan={rowSpan || "md:row-span-3"} title="Contact">
  <div class="h-full">
    <address class="flex flex-col mt-4 not-italic">
      <h2 class="text-gray-500">Email</h2>
      <p>rithikasilva [ət] outlook.com</p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="text-gray-500">Socials</h2>
      <ul>
        <li>
          <a class="hover:font-bold" href={LINKS.linkedin} target="_blank">LinkedIn</a>
        </li>
        <li>
          <a class="hover:font-bold" href={LINKS.github} target="_blank">GitHub</a>
        </li>
        <li>
          <a class="hover:font-bold" href={LINKS.threads} target="_blank">Threads</a>
        </li>
        <li>
          <a class="hover:font-bold" href={LINKS.discord} target="_blank">Discord</a>
        </li>
      </ul>
    </div>
    <div class="flex flex-col mt-4 w-fit">
      <a class="hover:font-bold text-primary-200" href="/contact">Send Message →</a>
    </div>
  </div>
</Card>
