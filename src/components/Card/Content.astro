---
interface Props {
  title?: string;
  body?: string;
}

const { title, body } = Astro.props;
---

<>
  {title && <h2 class="text-2xl font-bold m-0 z-20 mb-3 group-hover:text-primary-100 transition-colors duration-200">{title}</h2>}
  {body && <p class="m-0 font-light text-base leading-relaxed text-gray-300">{body}</p>}
  <slot />
</>
