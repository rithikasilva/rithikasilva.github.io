---
interface Props {
  rounded?: boolean;
}

const { rounded } = Astro.props;
---

<button
  class={`custom-btn text-xl max-h-[50px] shadow-custom shadow-primary-50 active:shadow-none active:translate-x-[3px] active:translate-y-[3px] text-gray-200 px-5 py-2 border border-primary-50 hover:bg-gray-700 hover:shadow-lg hover:shadow-primary-50/30 hover:scale-105 transition-all duration-200 ease-out bg-gray-900 cursor-pointer ${
    rounded ? "rounded-full" : "rounded-lg"
  }`}
>
  <slot />
</button>


